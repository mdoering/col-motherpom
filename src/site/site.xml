<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

  <bannerLeft>
    <name>GBIF</name>
    <src>http://cdn.gbif.org/img/header/logo.png</src>
    <href>http://www.gbif.org/</href>
  </bannerLeft>

  <publishDate position="right"/>

  <version position="right"/>

  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.4</version>
  </skin>

  <custom>
    <fluidoSkin>
      <twitter>
        <user>GBIF</user>
      </twitter>
    </fluidoSkin>
  </custom>

  <body>
    <breadcrumbs>
      <item name="GBIF" href="http://www.gbif.org"/>
    </breadcrumbs>

    <menu ref="modules" inherit="bottom"/>
    <menu ref="reports" inherit="bottom"/>

    <menu name="Developer Resources" inherit="bottom">
      <item name="Github" href="http://www.github.com/gbif"/>
      <item name="Developer Blog" href="http://gbif.blogspot.de/"/>
      <item name="GBIF API documentation" href="http://www.gbif.org/developer"/>
      <item name="GBIF API JavaDocs" href="http://gbif.github.io/gbif-api/apidocs/"/>
      <item name="DwC API JavaDocs" href="http://gbif.github.io/dwc-api/apidocs/"/>
    </menu>
  </body>
</project>
